program maxi;

  var
     nota,mayor,menor,cuenta : integer;
begin
    mayor:= 0;
    menor:= 0;
    cuenta:= 1;
    writeln('Escriba las 10 notas del alumno: ');
     while cuenta <=10 do
      begin
         readln(nota);
         if nota >=7 then
          begin
              mayor:= mayor + 1
          end
          else
          begin
              menor:= menor + 1
          end;
         cuenta := cuenta + 1;
      end;
     writeln('Las notas mayores a 7 son: ', mayor) ;
     writeln('Las notas menores a 7 son: ', menor) ;
     readln;
end.
